@model IEnumerable<Configs.Models.Employees>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageTitle = "Users Details List";
}


@foreach (var employee in Model)
{
    <div class="card m-3">
      
        <h3>@employee.Name</h3>

        <div class="card-footer text-center">
            <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">Asp Tag Link</a>
           
            <a href="@Url.Action("details","home",new { id=@employee.Id})" class="btn btn-primary m-1 ">Show</a>
            <a href="@Url.Action("details","home",new {id=@employee.Id})" class="btn btn-secondary m-1">Edit</a>
            <a asp-controller="home" asp-action="delete" asp-all-route-id="@employee.Id" class="btn btn-danger m-1">Delete</a>
            


        </div>
        </div>
}


@section Script{
    <script src="~/Scripts/CustomsJs.js"></script>
}

